<Window x:Class="IconController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IconController – 设置"
        Height="260" Width="400"
        ResizeMode="NoResize"
        Background="{StaticResource BgBrush}"
        Foreground="{StaticResource FgBrush}"
        WindowStartupLocation="CenterScreen">
  <Grid Margin="15">
    <StackPanel>
      <CheckBox x:Name="EnabledBox"   Content="启用快捷键" Margin="0 5"/>
      <TextBlock Text="快捷键：" Margin="0 6 0 0"/>
      <DockPanel>
        <Button x:Name="ChangeBtn" Content="修改快捷键" Width="90" DockPanel.Dock="Right" Margin="5 0"/>
        <TextBox x:Name="HotkeyBox" IsReadOnly="True"/>
      </DockPanel>
      <CheckBox x:Name="AutoStartBox"    Content="开机自启" Margin="0 10"/>
      <CheckBox x:Name="ShowTrayBox"     Content="显示托盘图标" Margin="0 5"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 15">
        <Button x:Name="SaveBtn"   Content="保存"  Width="80" Margin="5 0"/>
        <Button x:Name="CancelBtn" Content="取消"  Width="80"/>
      </StackPanel>
    </StackPanel>
  </Grid>
</Window>
